rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile rules
    match /users/{userId} {
      // Anyone logged in can read a profile
      allow read: if request.auth != null;
      // Users can write to any profile (simplified for game results, though production would be stricter)
      allow write: if request.auth != null;
    }
    
    // Game room rules
    match /rooms/{roomId} {
      // Anyone logged in can read, create, and update rooms
      allow read, create, update: if request.auth != null;
      // Only the host can delete the room
      allow delete: if request.auth != null && resource.data.hostId == request.auth.uid;
    }
  }
}